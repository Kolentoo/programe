/* pages/about/about.wxss */

.about {position:relative;}
.aboutbj {vertical-align: middle;width: 100%;height: 100vh;}
.conbox {margin:60px 25px 0;}
.introduce {position: fixed;width: 100%;height: 100vh;top: 0;left: 0;}
.title {font-size: 20px;color:#fff;font-weight: bold;transition:all ease 0.5s;opacity: 0;position:relative;top:30px;}
.content {color:#fff;font-size: 15px;margin-top: 30px;}
.normallist {transition:all ease 0.5s;position:relative;top:30px;opacity: 0;}
.lastlist {transition:all ease 0.5s;position:relative;top:30px;opacity: 0;}

.titleon {top:0;opacity: 1;}
.normalliston {top:0;opacity: 1;}
.lastliston {top:0;opacity: 1;}


