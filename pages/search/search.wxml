<!--pages/search/search.wxml-->

<view class="search">
  <view class="searchwbox">
    <view class="searchsection">
      <view class="searchinner">
        <input class="searchwords" value='' name="{{words}}" placeholder='请输入关键词'></input>
        <view class="iconbox">
          <image bindtap='search' class="searchicon" src='../../images/search.png'></image>
        </view>
        <view class="pickerbox">
          <picker bindchange="typechange" mode ="selector" value="{{index}}" class="type" range="{{array}}">
          {{array[index]}}
          </picker>
          <image class="down" src='../../images/down.png'></image>
        </view>
      </view>
      <text bindtap='gomenu' class="cancel">取消
      </text>
    </view>
  </view>
  <view class="searchtips">
    <view class="tipstitle">
      <image class="tipsicon" src='../../images/best.png'></image>
      <text class="tipsname">热门搜索</text>
    </view>
    <view class="tipsinner">
      <text class="tipstxt" wx:for="{{searchgroup}}" wx:key="{{this}}">{{item}}</text>
    </view>
  </view>
  <view class="result">
    
  </view>
</view>
