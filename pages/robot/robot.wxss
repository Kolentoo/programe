/* pages/music/music.wxss */

.sw {height:1100rpx;}
.info {padding:15px 0;width:100%;}
.robot {display: flex;}
.rpic {width:44px;height: 44px;border-radius:50%;margin:0 10px;box-shadow:0 2px 3px #ccc;}
.res {background: #fff;border-radius:5px;color:#333;font-size: 14px;box-shadow:0 2px 3px #ccc;line-height: 22px;padding:7px 10px;max-width:75%;word-wrap: break-word;align-self:center;}
.user {display: flex;flex-direction: row-reverse;line-height: 22px;padding:0 10px;max-width:75%;word-wrap: break-word;}
.question {height: 52px;background: rgb(252,252,252);border-top: 1px solid #ddd;display: flex;position: fixed;bottom:0;left:0;width:100%;z-index:100;}
.question input {border:1px solid #ccc;width: 280px;height: 40px;line-height: 40px;border-radius:8px;margin:5px 5px 0 8px;padding-left: 10px;
font-size: 16px;background: #fff;}
.question button {height: 40px;width:25%;margin:5px 5px 0 0;line-height: 40px;font-size: 16px;}